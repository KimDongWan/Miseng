                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Foreground">
                        <Grid Background="#FF1A1A1A">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <l:ForeColorPicker x:Name="ForePicker" />

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <Grid Height="5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Foreground="#FFF0F0F0"><Bold><Run Text="R　"/></Bold></TextBlock>
                                    <Grid Grid.Column="1">
                                        <ProgressBar Maximum="255" Height="15" Value="{Binding SelectedColor.R, ElementName=ForePicker}" Foreground="Red" Background="#FF333337" FontWeight="Bold"/>
                                        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"  Text="{Binding SelectedColor.R, ElementName=ForePicker}" FontWeight="Bold"/>
                                    </Grid>
                                </Grid>
                                <Grid Height="5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Foreground="#FFF0F0F0"><Bold><Run Text="G　"/></Bold></TextBlock>
                                    <Grid Grid.Column="1">
                                        <ProgressBar  Width="70" Maximum="255" Height="15" Value="{Binding SelectedColor.G, ElementName=ForePicker}" Foreground="Green" Background="#FF333337" FontWeight="Bold"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding SelectedColor.G, ElementName=ForePicker}" Foreground="White" FontWeight="Bold"/>
                                    </Grid>
                                </Grid>
                                <Grid Height="5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Foreground="#FFF0F0F0"><Bold><Run Text="B　"/></Bold></TextBlock>
                                    <Grid Grid.Column="1">
                                        <ProgressBar Maximum="255" Height="15" Value="{Binding SelectedColor.B, ElementName=ForePicker}" Foreground="Blue" Background="#FF333337" FontWeight="Bold"/>
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding SelectedColor.B, ElementName=ForePicker}" Foreground="White" FontWeight="Bold"/>
                                    </Grid>
                                </Grid>
                                <Grid Height="20"/>
                                <Border Height="25" BorderBrush="Black" BorderThickness="1" >
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding SelectedColor, ElementName=ForePicker}"/>
                                    </Border.Background>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding SelectedColor, ElementName=ForePicker}" Foreground="White" FontWeight="Bold" />
                                </Border>
                                <Grid Height="5"/>
                            </StackPanel>
                            <!--#FF333337 -->
                        </Grid>
                    </TabItem>
                </TabControl>
            </Expander>
            <Separator/>
            <Expander Header="모양" Background="#FF1A1A1A" Foreground="#FFF0F0F0" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="Visibility"/>
                    <TextBlock Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="0" Grid.Column="1" Text="{Binding TempVisivility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Grid.Row="0" Grid.Column="2" Click="VisibleBTN_Click" BorderBrush="#00000000">
                        <Button.Background>
                            <ImageBrush ImageSource="/Miseng;component/images/gress.png"/>
                        </Button.Background>
                    </Button>
                    <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="BorderThickness"/>
                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="25"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="2.5"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" >
                                <TextBlock.Background>
                                    <ImageBrush ImageSource="/Miseng;component/images/Hleft.png"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBox Background="#FF333337" Foreground="#FFFFFFFF" Grid.Row="0" Grid.Column="1" x:Name="LThickTB" Text="{Binding TempLThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_LThickChanged" />

                            <TextBlock Grid.Row="0" Grid.Column="2" >
                                <TextBlock.Background>
                                    <ImageBrush ImageSource="/Miseng;component/images/Hright.png"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBox Background="#FF333337" Foreground="#FFFFFFFF" Grid.Row="0" Grid.Column="3" x:Name="RThickTB" Text="{Binding TempRThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_RThickChanged" />

                            <TextBlock Grid.Row="2" Grid.Column="0">
                                <TextBlock.Background>
                                    <ImageBrush ImageSource="/Miseng;component/images/Hup.png"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBox Background="#FF333337" Foreground="#FFFFFFFF" Grid.Row="2" Grid.Column="1"  x:Name="UThickTB" Text="{Binding TempUThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_UThickChanged" />

                            <TextBlock Grid.Row="2" Grid.Column="2">
                                <TextBlock.Background>
                                    <ImageBrush ImageSource="/Miseng;component/images/Hdown.png"/>
                                </TextBlock.Background>
                            </TextBlock>
                            <TextBox Background="#FF333337" Foreground="#FFFFFFFF" Grid.Row="2" Grid.Column="3"  x:Name="DThickTB" Text="{Binding TempDThickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_DThickChanged" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </Expander>
            <Separator/>
            <Expander Header="공용" Background="#FF1A1A1A" Foreground="#FFF0F0F0" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="Text"/>
                    <TextBox Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="0" Grid.Column="1" x:Name="TextTB" Text="{Binding TempText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_TextChanged"/>

                    <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="Cursor"/>

                    <TextBlock Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="2" Grid.Column="1" Text="{Binding TempCursor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Grid.Row="2" Grid.Column="2" Click="CursorBTN_Click" BorderBrush="#00000000">
                        <Button.Background>
                            <ImageBrush ImageSource="/Miseng;component/images/gress.png"/>
                        </Button.Background>
                    </Button>
                    <Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="ToolTip"/>
                    <TextBox Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="4" Grid.Column="1" x:Name="TooltipTB" Text="{Binding TempToolTip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="TextBox_ToolTipChanged"/>
                </Grid>
            </Expander>
            <Separator/>
            <Expander Header="레이아웃" Background="#FF1A1A1A" Foreground="#FFF0F0F0" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#FFF0F0F0" FontWeight="Bold" Content="Width"/>
                    <TextBox Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="0" Grid.Column="1" x:Name="WidthTB" Text="{Binding TempWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_WidthChanged"/>

                    <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="Height"/>
                    <TextBox Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="2" Grid.Column="1" x:Name="HeightTB" Text="{Binding TempHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             TextChanged="TextBox_HeightChanged"/>

                    <Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="Angle"/>
                    <TextBox Background="#FF333337" Foreground="#FFF0F0F0" Grid.Row="4" Grid.Column="1" x:Name="AngleTB" Text="{Binding TempAngle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         TextChanged="TextBox_AngleChanged"/>

                    <Label Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="HorizontalAlignment"/>
                    <Grid Grid.Row="6" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" x:Name="H_LEFT" Click="HorizonLeftBTN_Click" ToolTip="Left">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/Left.png"/>
                            </Button.Background>
                        </Button>
                        <Button Grid.Column="1" x:Name="H_CENTER" Click="HorizonCenterBTN_Click" ToolTip="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/H_Center.png"/>
                            </Button.Background>
                        </Button>
                        <Button Grid.Column="2" x:Name="H_RIGHT" Click="HorizonRightBTN_Click" ToolTip="Right">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/Right.png"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <Label Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="VerticalAilgnment"/>
                    <Grid Grid.Row="8" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>
                        <Button  Grid.Column="0" x:Name="V_TOP" Click="VerticalTopBTN_Click" ToolTip="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/Top.png"/>
                            </Button.Background>
                        </Button>
                        <Button  Grid.Column="1" x:Name="V_CENTER" Click="VerticalCenterBTN_Click" ToolTip="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/V_Center.png"/>
                            </Button.Background>
                        </Button>
                        <Button  Grid.Column="2" x:Name="V_BOTTOM" Click="VerticalBottomBTN_Click" ToolTip="Bottom">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/Bottom.png"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </Expander>
            <Separator/>
            <Expander Header="텍스트" Background="#FF1A1A1A" Foreground="#FFF0F0F0" FontWeight="Bold">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="폰트"/>
                    <ComboBox Background="#FF333337" Foreground="#FFFFFFFF" Grid.Row="0" Grid.Column="1" x:Name="FontSelector">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontFamily="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Foreground="#FFF0F0F0" FontWeight="Bold" Content="크기"/>
                    <ComboBox Background="#FF333337" Foreground="#FFFFFFFF" Grid.Row="2" Grid.Column="1" x:Name="FontSize" SelectionChanged="FontSize_SelectionChanged" SelectedValue="{Binding TempFontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/bold.jpg"/>
                            </Button.Background>
                        </Button>
                        <Button Grid.Column="2">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/underline.jpg"/>
                            </Button.Background>
                        </Button>
                        <Button Grid.Column="4">
                            <Button.Background>
                                <ImageBrush ImageSource="/Miseng;component/images/slider.jpg"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </Expander>
            <Separator/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
